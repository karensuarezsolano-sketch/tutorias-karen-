  <script>
    const mathCard = document.getElementById('mathCard');
    const mathDetails = document.getElementById('mathDetails');

    mathCard.addEventListener('click', () => {
      // Alternar visibilidad
      if(mathDetails.style.display === 'none' || mathDetails.style.display === '') {
        mathDetails.style.display = 'block';
        mathDetails.scrollIntoView({behavior: "smooth"});
      } else {
        mathDetails.style.display = 'none';
      }
    });
  </script>

